{
  "private": true,
  "name": "github-tools",
  "version": "0.0.0",
  "description": "GH tools for unified",
  "license": "MIT",
  "keywords": [],
  "repository": "unifiedjs/github-tools",
  "bugs": "https://github.com/unifiedjs/github-tools/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.js",
  "files": [
    "lib/",
    "config/",
    "index.js"
  ],
  "dependencies": {
    "@octokit/graphql": "^4.0.0",
    "@octokit/rest": "^18.0.0",
    "arr-diff": "^4.0.0",
    "atob": "^2.0.0",
    "chalk": "^4.0.0",
    "dlv": "^1.0.0",
    "js-yaml": "^3.0.0",
    "mdast-zone": "^4.0.0",
    "minimatch": "^3.0.0",
    "p-series": "^2.0.0",
    "parse-author": "^2.0.0",
    "trough": "^1.0.0",
    "unist-builder": "^2.0.0"
  },
  "devDependencies": {
    "alpha-sort": "^3.0.0",
    "d3-color": "^1.3.0",
    "d3-scale": "^3.0.1",
    "prettier": "^2.0.0",
    "remark-cli": "^8.0.0",
    "remark-preset-wooorm": "^7.0.0",
    "xo": "^0.32.0"
  },
  "scripts": {
    "start": "node .",
    "crawl": "node script/crawl",
    "format": "remark . -qfo && prettier . --write && xo --fix",
    "test": "npm run crawl && npm run format"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/no-reduce": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/string-content": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
